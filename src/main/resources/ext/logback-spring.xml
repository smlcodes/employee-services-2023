<?xml version="1.0" encoding="UTF-8"?>
<configuration>
 
    <property name="LOGSDIR" value="./logs" />
 
    <appender name="Console" class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>
                %d{ISO8601} [%highlight(%-5level)] [%-10.10t] %yellow(%-40.40logger{39}): %msg%n%throwable
            </Pattern>
        </layout>
    </appender>
 
    <appender name="RollingFile" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOGSDIR}/employee-log.log</file>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <Pattern>%d [%-5level] [%-10.10t] %-40.40logger{39}: %msg%n%throwable</Pattern>
        </encoder>
 
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- rollover daily and when the file reaches 10 MegaBytes -->
            <fileNamePattern>${LOGSDIR}/archived/employee-log-%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>10MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
        </rollingPolicy>
    </appender>
     
    <!-- LOG everything at WARN level -->
    <root level="warn">
        <appender-ref ref="RollingFile" />
        <!-- <appender-ref ref="Console" /> -->  
    </root>
 
    <!-- LOG "com.dutech*" at TRACE level -->
    <logger name="com.dutech" level="info" additivity="false">
        <appender-ref ref="RollingFile" />
        <!-- <appender-ref ref="Console" /> -->
    </logger>
 
</configuration>